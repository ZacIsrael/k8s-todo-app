{
  "compilerOptions": {
    /* File structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Target modern Node runtime with ESM syntax */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    /* Type definitions */
    "types": ["node"],
    "skipLibCheck": true,

    /* Output helpers */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness and safety */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    /* Allow ESM-style imports (needed for "import express from 'express'") */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Isolated modules for tools like ts-node */
    "isolatedModules": true,

    /* Make TS treat .ts files as modules even without imports */
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}



